{
  "name": "ntik",
  "private": true,
  "version": "0.1.0",
  "description": "Système de gestion scolaire Ntik pour l'administration des élèves, des notes et des paiements",
  "author": {
    "name": "Ntik",
    "email": "imboujunior91@gmail.com"
  },
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start:dev": "concurrently \"npm:dev\" \"npm:electron:dev\"",
    "build": "prisma generate && vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development ./node_modules/.bin/electron .",
    "electron:build": "vite build && cross-env NODE_ENV=production electron-builder",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder",
    "build:all": "vite build && cross-env NODE_ENV=production electron-builder --linux AppImage --linux deb --win nsis -p always",
    "build:linux": "vite build && cross-env NODE_ENV=production electron-builder --linux AppImage --linux deb -p always",
    "build:windows": "vite build && cross-env NODE_ENV=production electron-builder --win nsis --publish always",
    "build:windows:local": "vite build && cross-env NODE_ENV=production electron-builder --win nsis",
    "release": "vite build && electron-builder build --publish always",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f",
    "clear-db": "node scripts/clear-db.cjs"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "Kingjr7",
      "repo": "ecole-student-hub"
    },
    "asar": true,
    "appId": "com.ntik.school",
    "productName": "Ntik",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/generated/prisma/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**",
      "**/node_modules/prisma/**",
      "**/node_modules/@prisma/engines/**"
    ],
    "extraResources": [
      ".env",
      "ntik.sqlite"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Education",
      "maintainer": "Ntik <contact@ntik-school.com>",
      "vendor": "Ntik"
    },
    "mac": {
      "category": "Education"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@supabase/supabase-js": "^2.50.2",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/react-virtual": "^3.13.12",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.0.0",
    "electron-settings": "^4.0.4",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "embla-carousel-react": "^8.3.0",
    "input-otp": "^1.2.4",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.462.0",
    "next-themes": "^0.3.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7",
    "sharp": "^0.34.3",
    "sonner": "^1.5.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@prisma/client": "^6.15.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.1.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "lovable-tagger": "^1.1.7",
    "postcss": "^8.4.47",
    "prisma": "^6.15.0",
    "supabase": "^2.39.2",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
